[
    {
        "name": "Manage notifications",
        "slug": "notification-manager-manage-all",
        "description": "Allows user to perform all actions on Notification Manager app",
        "permissions": {
            "NotificationManager.Entities.EmailLog": {
                "c": false,
                "r": true,
                "u": false,
                "d": false
            },
            "NotificationManager.Entities.Notification": {
                "c": true,
                "r": true,
                "u": true,
                "d": true,
                "{id}/preview": {
                    "post": true
                },
                "{id}/copy": {
                    "post": true
                }
            },
            "NotificationManager.Entities.Settings": {
                "/": {
                    "get": true,
                    "patch": true
                }
            },
            "NotificationManager.Entities.Template": {
                "r": true,
                "c": true,
                "u": true,
                "d": true
            }
        }
    }
]